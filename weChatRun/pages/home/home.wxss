.pg_head {
  display: flex;
  padding: 40rpx 70rpx;
}
.pg_head image {
  width: 80rpx;
  height: auto;
  margin-right: 20rpx;
}
.page_head .title {
  font-size: 36rpx;
  color: #1a1a1a;
}

.swiper-tab{
    width: 100%;
    background: #fff;
    text-align: center;
    line-height: 70rpx;
    display: flex;
    justify-content: space-around;
}
.swiper-tab-list{
    font-size: 30rpx;
    display: inline-block;
    color: #666;
}
.swiper-tab-list.on{
    color: #5276d0;
    border-bottom: 5rpx solid #5276d0;
}
.swiper-box{
    display: block;
    height: 100%;
    width: 100%;
    /* overflow: hidden; */
 }

.race-state {
  line-height: 80rpx;
  text-align: center;
}

.userinfo {
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
}
.userinfo .avatar {
  width: 126rpx;
  height: 126rpx;
  border-radius: 100%;
  margin-right: 34rpx;
}
.userinfo .team {
  margin-bottom: 10rpx;
}
.userinfo .team-name {
  margin: 0 24rpx;
  color: #f47c0d;
}
.userinfo .my-score {
  margin-left: 24rpx;
  color: #50aa27;
}

.team-block {
  width: 50%;
  float: left;
}
.team-name {
  font-size: 24rpx;
  text-align: center;
  color: #333;
}
.team-total {
  text-align: center;
  color: #333;
  font-weight: 600;
}
.team-number {
  padding: 0 40rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.team-number image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 18rpx;
}
.team-member-name {
  font-size: 22rpx;
}
.team-member-total {
  color: #50aa27;
}
.team-member-week {
  color: #50aa27;
}

.data-list {
  background: #fff;
}
.data-block {
  height: 200rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #f4f5f7;
  display: flex;
  align-items: center;
  font-size: 40rpx;
  color: #999;
  position: relative;
}
.data-block .user{
  height: 200rpx;
  width: 200rpx;
  text-align: center;
}
.cheer-icon{
  height: 130rpx;
  width: 130rpx;
  border-radius: 65rpx;
}